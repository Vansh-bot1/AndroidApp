<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="10dip" android:color="#8F8F8F" />
            <gradient android:angle="-90" android:endColor="#8F8F8F" android:startColor="#8F8F8F" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <stroke android:width="10dip" android:color="#AAAAAA" />
            <gradient android:angle="-90" android:endColor="#AAAAAA" android:startColor="#AAAAAA" />
        </shape>
    </item>
</selector>